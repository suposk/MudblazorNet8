<MudText Color=Color.Primary> Shared Counter</MudText>

<MudText Typo="Typo.h3" GutterBottom="true">Type: @Type</MudText>
<MudText Typo="Typo.h3" GutterBottom="true">Shared Counter</MudText>

<MudText Class="mb-4">Current count: @currentCount</MudText>
<MudText Class="mb-4">Total count: @totalCount (Static)</MudText>
<MudButton Color="Color.Primary" Variant="Variant.Filled" @onclick="IncrementCount">Click me</MudButton>

@code {
    [Parameter]
    public string? Type { get; set; }

    private int currentCount = 0;
    protected static int totalCount = 0;

    private void IncrementCount()
    {
        currentCount++;
        totalCount++;        
    }
}
